#include <iostream>
#include <sstream>
#include <cstdlib>
#include <time.h>
using namespace std;

#ifndef _DateTime_h
#define _DateTime_h

class DateTime
{
    
public:
    DateTime();                     //Empty Constructor
    DateTime(int month, int day, int year);        //Date Constructor
    DateTime(int hour, int minute, int second, int millisecond);   //Time Constructor (Military)
    DateTime(int month, int day, int year, int hour, int minute, int second, int millisecond);    //Date and Time Constructor
    
    //Getters
    int getYear();
    int getMonth();
    int getDay();
    int getHour();
    int getMinute();
    int getSecond();
    int getMilliseconds();
    bool getIsDone();
    bool getIsTime();
    bool getIsDate();
    bool getIsDateTime();
    
    //Setters
    void setYear(int);
    void setMonth(int);
    void setDay(int);
    void setHour(int);
    void setMinute(int);
    void setSecond(int);
    void setMilliseconds(int);
    void setIsTime(bool);
    void setIsDate(bool);
    void setIsDateTime(bool);
    
    void subtractOneSecond();       //Subtracts one second, if time is done, class variable changes to signifiy it is at zero
    
    
    string getDateTime();       //Depending on type of DateTime, it returns the necissary information
    string toFile();            //CSV format for file output
    
private:
    int years;
    int months;
    int days;
    int hours;
    int minutes;
    int seconds;
    int milliseconds;
    
    bool isDone;
    bool isTime;
    bool isDate;
    bool isDateTime;
    
    bool checkDone();       //Checks to see if time variables show if it is done
    void changeType(bool isTimeObject, bool isDateObject, bool isDateTimeObject);   //changes type of DateTime this object is
    
    void currentTime();
    
    string monthName(int);      //String return for the month
    int monthName(string);      //integer return for the month based on computer abbriviation
    
    string getDate();           //Returns Date
    string getTime();           //Returns Time
};

#endif
